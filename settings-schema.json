{
    "head0": {
        "type": "header",
        "description": "Settings for polarclock@veprogames"
    },
    "desklet-scale": {
        "type": "spinbutton",
        "default": 1,
        "min": 0.3,
        "max": 2,
        "step": 0.1,
        "description": "Scale of the desklet"
    },
    "head1": {
        "type": "header",
        "description": "Gradient"
    },
    "gradient-enabled": {
        "type": "checkbox",
        "description": "If checked, use the gradient settings below and calculate colors based on the 'second' (innermost) color set",
        "default": false
    },
    "gradient-r": {
        "type": "spinbutton",
        "default": 0.15,
        "min": -1,
        "max": 1,
        "step": 0.05,
        "description": "Red Increase per Circle"
    },
    "gradient-g": {
        "type": "spinbutton",
        "default": 0.05,
        "min": -1,
        "max": 1,
        "step": 0.05,
        "description": "Green Increase per Circle"
    },
    "gradient-b": {
        "type": "spinbutton",
        "default": -0.2,
        "min": -1,
        "max": 1,
        "step": 0.05,
        "description": "Blue Increase per Circle"
    },
    "head2": {
        "type": "header",
        "description": "Individual Colors"
    },
    "color-second": {
        "type": "colorchooser",
        "default": "rgba(134, 190, 64, 1)",
        "description": "Color for the 1st Circle (Second)",
        "tooltip": "RGB"
    },
    "color-minute": {
        "type": "colorchooser",
        "default": "rgba(134, 220, 104, 1)",
        "description": "Color for the 2nd Circle (Minute)",
        "tooltip": "RGB"
    },
    "color-hour": {
        "type": "colorchooser",
        "default": "rgba(134, 250, 144, 1)",
        "description": "Color for the 3rd Circle (Hour)",
        "tooltip": "RGB"
    },
    "color-day": {
        "type": "colorchooser",
        "default": "rgba(134, 255, 184, 1)",
        "description": "Color for the 4th Circle (Day of Month)",
        "tooltip": "RGB"
    },
    "color-month": {
        "type": "colorchooser",
        "default": "rgba(134, 255, 224, 1)",
        "description": "Color for the 5th Circle (Month of Year)",
        "tooltip": "RGB"
    },
    "head3": {
        "type": "header",
        "description": "Text"
    },
    "text-year-enabled": {
        "type": "checkbox",
        "description": "Show the Year",
        "default": true
    },
    "text-date-enabled": {
        "type": "checkbox",
        "description": "Show the Month and Day",
        "default": true
    },
    "text-time-enabled": {
        "type": "checkbox",
        "description": "Show the Time of Day",
        "default": true
    },
    "text-year-color": {
        "type": "colorchooser",
        "description": "Color of the Year Text",
        "default": "rgba(255, 255, 255, 1)",
        "tooltip": "RGB"
    },
    "text-date-color": {
        "type": "colorchooser",
        "description": "Color of the Month/Day Text",
        "default": "rgba(255, 255, 255, 1)",
        "tooltip": "RGB"
    },
    "text-time-color": {
        "type": "colorchooser",
        "description": "Color of the Time of Day Text",
        "default": "rgba(255, 255, 255, 1)",
        "tooltip": "RGB"
    }
}